{
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["node"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@containers": ["src/containers"],
      "@containers/*": ["src/containers/*"],
      "@layouts": ["src/layouts"],
      "@layouts/*": ["src/layouts/*"]
